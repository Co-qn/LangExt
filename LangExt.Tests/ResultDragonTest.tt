<#+
string CreateTupleResult(int n, int elem) {
    var elems = new List<string>();
    for (int i = 0; i < n; i++) {
        if (elem == 2 && i == 1)
            elems.Add("1");
        else
            elems.Add(elem.ToString());
    }
    return "Result.Success(Create.Tuple(" + string.Join(", ", elems) + "))";
}
